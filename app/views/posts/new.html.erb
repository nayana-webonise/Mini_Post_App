
<h3>Post Here</h3>
<%= form_for @post, :html => { :method => :post, :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :name, "Post", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :content ,cols:2, rows:3 %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", class: "btn btn-small btn-primary", id: "post-form"  %>
    </div>
<% end %>


