<center><h2>Sign Up</h2></center>
<hr>
<%= form_for @user, :html => { :method => :post, :class => 'form-horizontal',:style => "padding-left: 200px" } do |f| %>
    <div class="control-group">
      <%= f.label :name, "Name", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :Email, "Email", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :Password, "Password", :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :Password_Confirmation, "Password Confirmation", :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>
    <div class="form-actions">

      <%= f.submit "Create My Account", class: "btn btn-small btn-primary", id: "submit" %>
    </div>

<% end %>

