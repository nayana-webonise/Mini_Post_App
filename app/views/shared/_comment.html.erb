
<h3>Add a Comment</h3>
<%= form_for @comment, :url => post_comments_path(@post), :html => { :method => :post, :class => 'form-horizontal' } do |f1| %>
    <div class="control-group">
      <%#= f1.label :Comment %>
      <div class="controls">
        <%= f1.text_area :body  %>
        <%= f1.submit "Submit", class: "btn btn-small btn-primary", id: "comment-form" %>
      </div>
    </div>
    <div class="form-actions">
    </div>
<% end %>










