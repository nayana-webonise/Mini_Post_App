
<h5>Sign in</h5>
<%= form_for(:session, url: sessions_path,:html => { :method => :post },:class => "form-inline" ) do |f| %>

    <%= f.text_field :email, :class=> "input-small" %>

    <%= f.password_field :password, :class=> "input-small" %>

    <%= f.submit "Sign in", id: "sign-in", class: "btn btn-small btn-primary" %>

<% end %>

<p>New User?? <%= link_to "Sign up now!", new_user_path %></p>
